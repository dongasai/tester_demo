{
  "name": "dongsai/tester_demo",
  "description": "对于 tester 的演示",
  "type": "library",
  "authors": [
    {
      "name": "dongasai",
      "email": "1514582970@qq.com"
    }
  ],
  "scripts": {
    "a": [
      "./mtf --debug --verbose examples/DTest.php "
    ],
    "xml": [
      "./mtf --debug"
    ],
    "suites": [
      "./mtf --debug --testsuite ATestUnit"
    ],
    "group": [
      "./mtf --debug --group test1"
    ],
    "b": [
      "vendor/bin/phpunit "
    ],
    "tester": [
      "vendor/bin/tester -C --colors 1 --setup tester/setup.php tester"
    ]
  },
  "require": {
    "php": "^7.0",
    "ext-pcntl": "*",
    "symfony/var-dumper": "^3.4",
    "jenner/simple_fork": "^1.2",
    "adhocore/cli": "^0.8.4",
    "webmozart/assert": "^1.9",
    "phpunit/php-code-coverage": "*",
    "nikic/php-parser": "^4.10",
    "phpunit/php-timer": "^1.0",
    "ext-simplexml": "*",
    "yingchaophp/type-extension": "*",
    "beberlei/assert": "^3.3"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "nette/tester": "^2.0",
    "codedungeon/phpunit-result-printer": "^0.9.3",
    "johnkary/phpunit-speedtrap": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "ter\\": "tester",
      "mtf\\": "src",
      "examples\\": "examples"
    }
  },
  "suggest": {
    "ext-sysvshm": "共享内存",
    "ext-sysvmsg": "消息队列",
    "ext-sysvsem": "互斥锁",
    "ext-pcov": "代码覆盖率检查"
  },
  "support": {
    "email": "1514582970@qq.com",
    "gitee": "gitee.com/dongasai/mtf"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
